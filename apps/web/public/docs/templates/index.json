{
  "title": "Templates",
  "description": "Project scaffolding templates for quick project setup. Combine base templates with database, auth, features, and security presets.",
  "categories": [
    {
      "id": "base",
      "title": "Base Templates",
      "description": "Framework starters that define the core project structure",
      "templates": [
        {
          "id": "express-minimal",
          "name": "Express Minimal",
          "description": "Bare Express.js v5 setup with TypeScript",
          "purpose": "Start with the absolute minimum. Perfect for learning, prototypes, or when you want full control over what gets added.",
          "features": [
            "Express.js v5",
            "TypeScript configuration",
            "Dotenv for environment variables",
            "Graceful shutdown handling",
            "Health check endpoint"
          ],
          "includes": [],
          "command": "hanma create my-api --framework express-minimal",
          "structure": [
            "src/index.ts - Entry point",
            "tsconfig.json - TypeScript config",
            ".env.example - Environment template"
          ],
          "dependencies": ["express", "dotenv"],
          "devDependencies": ["typescript", "@types/node", "@types/express", "tsx"],
          "scripts": {
            "dev": "tsx watch src/index.ts",
            "build": "tsc",
            "start": "node dist/index.js"
          },
          "envVars": [
            { "name": "PORT", "default": "3000" },
            { "name": "NODE_ENV", "default": "development" }
          ],
          "nextSteps": [
            "Add a database: --database drizzle-postgres",
            "Add authentication: --auth jwt-auth",
            "Add security: --preset security-basic"
          ]
        },
        {
          "id": "express-rest-api",
          "name": "Express REST API",
          "description": "Production-ready REST API with validation, error handling, and structured routing",
          "purpose": "Best starting point for building REST APIs. Includes everything you need for production-ready endpoints.",
          "features": [
            "Express.js v5 with full middleware stack",
            "Zod request validation",
            "Structured error handling",
            "CORS configuration",
            "Helmet security headers",
            "Health check routes",
            "Async handler wrapper"
          ],
          "includes": [
            "express-server - Production server setup",
            "cors - CORS configuration",
            "error-middleware - Error handling",
            "validation-zod - Request validation",
            "async-handler - Async wrapper",
            "health-check - Health routes"
          ],
          "command": "hanma create my-api --framework express-rest-api",
          "structure": [
            "src/index.ts - Entry point",
            "src/libs/server.ts - Server setup",
            "src/libs/cors.ts - CORS config",
            "src/middleware/error.ts - Error handler",
            "src/middleware/validate.ts - Validation",
            "src/routes/health.ts - Health endpoints"
          ],
          "dependencies": ["express", "cors", "helmet", "zod", "dotenv"],
          "devDependencies": ["typescript", "@types/node", "@types/express", "@types/cors", "tsx"],
          "scripts": {
            "dev": "tsx watch src/index.ts",
            "build": "tsc",
            "start": "node dist/index.js"
          },
          "envVars": [
            { "name": "PORT", "default": "3000" },
            { "name": "NODE_ENV", "default": "development" },
            { "name": "CORS_ORIGIN", "default": "http://localhost:3000" }
          ],
          "recommended": true
        },
        {
          "id": "express-graphql",
          "name": "Express GraphQL",
          "description": "Apollo GraphQL server with Express integration",
          "purpose": "Build a GraphQL API with Apollo Server. Best for complex data requirements and when clients need flexible querying.",
          "features": [
            "Apollo Server 4",
            "GraphQL schema and resolvers",
            "Context for authentication",
            "Graceful shutdown",
            "Introspection control",
            "Health check endpoint"
          ],
          "includes": ["graphql-server"],
          "command": "hanma create my-api --framework express-graphql",
          "dependencies": ["express", "@apollo/server", "graphql", "cors", "dotenv"],
          "devDependencies": ["typescript", "@types/node", "@types/express", "@types/cors", "tsx"],
          "envVars": [
            { "name": "PORT", "default": "4000" },
            { "name": "NODE_ENV", "default": "development" }
          ]
        },
        {
          "id": "express-trpc",
          "name": "Express tRPC",
          "description": "tRPC server with Express adapter for end-to-end type safety",
          "purpose": "Full-stack TypeScript with automatic type inference from backend to frontend. Best for monorepo setups.",
          "features": [
            "tRPC with Express adapter",
            "Zod validation",
            "Public and protected procedures",
            "Nested routers",
            "Error formatting",
            "Type export for clients"
          ],
          "includes": ["trpc-server"],
          "command": "hanma create my-api --framework express-trpc",
          "dependencies": ["express", "@trpc/server", "zod", "cors", "dotenv"],
          "devDependencies": ["typescript", "@types/node", "@types/express", "@types/cors", "tsx"],
          "envVars": [
            { "name": "PORT", "default": "3000" },
            { "name": "NODE_ENV", "default": "development" }
          ]
        },
        {
          "id": "express-socket",
          "name": "Express Socket.io",
          "description": "Real-time server with Socket.io integration",
          "purpose": "Build real-time applications like chat, live updates, and collaborative features.",
          "features": [
            "Socket.io integration",
            "Optional JWT authentication",
            "CORS configuration",
            "Room support",
            "Connection logging"
          ],
          "includes": ["socket-server"],
          "command": "hanma create my-api --framework express-socket",
          "dependencies": ["express", "socket.io", "cors", "dotenv"],
          "devDependencies": ["typescript", "@types/node", "@types/express", "@types/cors", "tsx"],
          "envVars": [
            { "name": "PORT", "default": "3000" },
            { "name": "NODE_ENV", "default": "development" },
            { "name": "CORS_ORIGIN", "default": "http://localhost:3000" }
          ]
        }
      ]
    },
    {
      "id": "database",
      "title": "Database Templates",
      "description": "ORM and database driver configurations",
      "templates": [
        {
          "id": "drizzle-postgres",
          "name": "Drizzle + PostgreSQL",
          "description": "Drizzle ORM with PostgreSQL connection pool",
          "purpose": "Lightweight, type-safe ORM for PostgreSQL. Great performance and developer experience.",
          "features": [
            "Drizzle ORM setup",
            "PostgreSQL connection pool",
            "Schema file template",
            "Drizzle Kit for migrations",
            "Studio for database UI"
          ],
          "command": "hanma create my-api --framework express-rest-api --database drizzle-postgres",
          "dependencies": ["drizzle-orm", "pg", "dotenv"],
          "devDependencies": ["drizzle-kit", "@types/pg"],
          "scripts": {
            "db:generate": "drizzle-kit generate",
            "db:push": "drizzle-kit push",
            "db:studio": "drizzle-kit studio"
          },
          "envVars": [
            { "name": "DATABASE_URL", "required": true, "example": "postgresql://user:pass@localhost:5432/db" }
          ]
        },
        {
          "id": "drizzle-mysql",
          "name": "Drizzle + MySQL",
          "description": "Drizzle ORM with MySQL connection pool",
          "command": "hanma create my-api --framework express-rest-api --database drizzle-mysql",
          "dependencies": ["drizzle-orm", "mysql2", "dotenv"],
          "devDependencies": ["drizzle-kit"],
          "envVars": [
            { "name": "DATABASE_URL", "required": true, "example": "mysql://user:pass@localhost:3306/db" }
          ]
        },
        {
          "id": "drizzle-sqlite",
          "name": "Drizzle + SQLite",
          "description": "Drizzle ORM with SQLite for local development or embedded databases",
          "command": "hanma create my-api --framework express-rest-api --database drizzle-sqlite",
          "dependencies": ["drizzle-orm", "better-sqlite3", "dotenv"],
          "devDependencies": ["drizzle-kit", "@types/better-sqlite3"],
          "envVars": [
            { "name": "DATABASE_PATH", "default": "./data/database.db" }
          ]
        },
        {
          "id": "prisma-postgres",
          "name": "Prisma + PostgreSQL",
          "description": "Prisma ORM with PostgreSQL",
          "purpose": "Full-featured ORM with excellent DX, migrations, and Prisma Studio.",
          "command": "hanma create my-api --framework express-rest-api --database prisma-postgres",
          "dependencies": ["@prisma/client", "dotenv"],
          "devDependencies": ["prisma"],
          "scripts": {
            "db:generate": "prisma generate",
            "db:push": "prisma db push",
            "db:studio": "prisma studio",
            "db:migrate": "prisma migrate dev"
          },
          "envVars": [
            { "name": "DATABASE_URL", "required": true }
          ]
        },
        {
          "id": "mongodb",
          "name": "MongoDB",
          "description": "MongoDB native driver setup",
          "command": "hanma create my-api --framework express-rest-api --database mongodb",
          "dependencies": ["mongodb", "dotenv"],
          "envVars": [
            { "name": "MONGODB_URI", "default": "mongodb://localhost:27017/database" }
          ]
        }
      ]
    },
    {
      "id": "auth",
      "title": "Authentication Templates",
      "description": "Authentication provider configurations",
      "templates": [
        {
          "id": "jwt-auth",
          "name": "JWT Authentication",
          "description": "Custom JWT authentication with refresh tokens",
          "purpose": "Full control over your auth flow. Best for APIs that need custom claims and token management.",
          "features": [
            "Access and refresh tokens",
            "Middleware for protected routes",
            "Role-based authorization",
            "Token utilities"
          ],
          "command": "hanma create my-api --framework express-rest-api --auth jwt-auth",
          "dependencies": ["jsonwebtoken"],
          "devDependencies": ["@types/jsonwebtoken"],
          "envVars": [
            { "name": "JWT_SECRET", "required": true },
            { "name": "JWT_EXPIRES_IN", "default": "15m" },
            { "name": "JWT_REFRESH_EXPIRES_IN", "default": "7d" }
          ]
        },
        {
          "id": "better-auth",
          "name": "Better Auth",
          "description": "Better-auth setup with session management",
          "purpose": "Modern auth library with built-in session handling. Simple setup with powerful features.",
          "command": "hanma create my-api --framework express-rest-api --auth better-auth",
          "dependencies": ["better-auth"],
          "envVars": [
            { "name": "BETTER_AUTH_SECRET", "required": true },
            { "name": "BETTER_AUTH_URL", "required": true }
          ]
        },
        {
          "id": "passport-local",
          "name": "Passport Local",
          "description": "Passport.js with username/password strategy",
          "purpose": "Classic session-based auth with Passport.js. Well-documented with extensive ecosystem.",
          "command": "hanma create my-api --framework express-rest-api --auth passport-local",
          "dependencies": ["passport", "passport-local", "express-session"],
          "devDependencies": ["@types/passport", "@types/passport-local", "@types/express-session"],
          "envVars": [
            { "name": "SESSION_SECRET", "required": true }
          ]
        }
      ]
    },
    {
      "id": "features",
      "title": "Feature Templates",
      "description": "Optional add-on features (can select multiple)",
      "subcategories": [
        {
          "id": "mailers",
          "title": "Email Providers",
          "templates": [
            {
              "id": "mailer-nodemailer",
              "name": "Nodemailer",
              "description": "SMTP email with any provider",
              "command": "--mailer nodemailer",
              "dependencies": ["nodemailer"],
              "envVars": ["SMTP_HOST", "SMTP_PORT", "SMTP_USER", "SMTP_PASS", "MAIL_FROM"]
            },
            {
              "id": "mailer-resend",
              "name": "Resend",
              "description": "Modern email API",
              "command": "--mailer resend",
              "dependencies": ["resend"],
              "envVars": ["RESEND_API_KEY", "MAIL_FROM"]
            },
            {
              "id": "mailer-sendgrid",
              "name": "SendGrid",
              "description": "SendGrid email API",
              "command": "--mailer sendgrid",
              "dependencies": ["@sendgrid/mail"],
              "envVars": ["SENDGRID_API_KEY", "MAIL_FROM"]
            },
            {
              "id": "mailer-ses",
              "name": "AWS SES",
              "description": "Amazon Simple Email Service",
              "command": "--mailer aws-ses",
              "dependencies": ["@aws-sdk/client-ses"],
              "envVars": ["AWS_REGION", "AWS_ACCESS_KEY_ID", "AWS_SECRET_ACCESS_KEY", "MAIL_FROM"]
            }
          ]
        },
        {
          "id": "uploads",
          "title": "File Upload Providers",
          "templates": [
            {
              "id": "upload-s3",
              "name": "AWS S3",
              "description": "S3 with presigned URLs",
              "command": "--upload s3",
              "dependencies": ["@aws-sdk/client-s3", "@aws-sdk/s3-request-presigner"],
              "envVars": ["AWS_REGION", "AWS_ACCESS_KEY_ID", "AWS_SECRET_ACCESS_KEY", "S3_BUCKET_NAME"]
            },
            {
              "id": "upload-cloudinary",
              "name": "Cloudinary",
              "description": "Image/video with transformations",
              "command": "--upload cloudinary",
              "dependencies": ["cloudinary"],
              "envVars": ["CLOUDINARY_CLOUD_NAME", "CLOUDINARY_API_KEY", "CLOUDINARY_API_SECRET"]
            },
            {
              "id": "upload-local",
              "name": "Local (Multer)",
              "description": "Local file uploads",
              "command": "--upload local",
              "dependencies": ["multer"],
              "envVars": ["UPLOAD_DIR"]
            },
            {
              "id": "upload-gcp",
              "name": "Google Cloud Storage",
              "description": "GCS with signed URLs",
              "command": "--upload gcp",
              "dependencies": ["@google-cloud/storage"],
              "envVars": ["GCP_PROJECT_ID", "GCS_BUCKET_NAME"]
            },
            {
              "id": "upload-r2",
              "name": "Cloudflare R2",
              "description": "S3-compatible storage",
              "command": "--upload r2",
              "dependencies": ["@aws-sdk/client-s3", "@aws-sdk/s3-request-presigner"],
              "envVars": ["R2_ACCOUNT_ID", "R2_ACCESS_KEY_ID", "R2_SECRET_ACCESS_KEY", "R2_BUCKET_NAME"]
            }
          ]
        },
        {
          "id": "other",
          "title": "Other Features",
          "templates": [
            {
              "id": "cache-redis",
              "name": "Redis Cache",
              "command": "--cache redis",
              "dependencies": ["ioredis"],
              "envVars": ["REDIS_URL"]
            },
            {
              "id": "logging-winston",
              "name": "Winston Logging",
              "command": "--logging winston",
              "dependencies": ["winston", "morgan"],
              "envVars": ["LOG_LEVEL"]
            },
            {
              "id": "monitoring-sentry",
              "name": "Sentry Monitoring",
              "command": "--monitoring sentry",
              "dependencies": ["@sentry/node"],
              "envVars": ["SENTRY_DSN"]
            }
          ]
        }
      ]
    },
    {
      "id": "presets",
      "title": "Security Presets",
      "description": "Pre-configured security middleware bundles",
      "templates": [
        {
          "id": "security-basic",
          "name": "Basic Security",
          "description": "Essential security for most applications",
          "purpose": "Good default security configuration for development and staging.",
          "includes": [
            "Helmet - Security headers",
            "CORS - Cross-origin configuration",
            "Rate Limiter - Request throttling"
          ],
          "command": "--preset security-basic",
          "dependencies": ["helmet", "cors", "express-rate-limit"],
          "envVars": ["CORS_ORIGIN", "RATE_LIMIT_WINDOW_MS", "RATE_LIMIT_MAX"]
        },
        {
          "id": "security-strict",
          "name": "Strict Security",
          "description": "Production-grade security with sanitization",
          "purpose": "Full security stack for production deployments.",
          "includes": [
            "Helmet - Security headers",
            "CORS - Cross-origin configuration",
            "Rate Limiter - Request throttling",
            "Sanitize - XSS prevention",
            "Request ID - Tracing",
            "Compression - Response compression"
          ],
          "command": "--preset security-strict",
          "dependencies": ["helmet", "cors", "express-rate-limit", "sanitize-html", "compression", "uuid"],
          "envVars": ["CORS_ORIGIN", "RATE_LIMIT_WINDOW_MS", "RATE_LIMIT_MAX"]
        }
      ]
    }
  ],
  "examples": [
    {
      "title": "Minimal API",
      "description": "Start with just Express",
      "command": "hanma create my-api --framework express-minimal --pm pnpm"
    },
    {
      "title": "REST API with Drizzle",
      "description": "Production REST API with PostgreSQL",
      "command": "hanma create my-api --framework express-rest-api --database drizzle-postgres --pm pnpm"
    },
    {
      "title": "Full Stack Production",
      "description": "Everything you need for production",
      "command": "hanma create my-api --framework express-rest-api --database drizzle-postgres --auth jwt-auth --mailer resend --upload s3 --preset security-strict --pm pnpm"
    },
    {
      "title": "GraphQL API",
      "description": "GraphQL with Prisma",
      "command": "hanma create my-api --framework express-graphql --database prisma-postgres --pm pnpm"
    }
  ]
}
