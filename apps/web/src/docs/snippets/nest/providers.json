          "features": [
            "Winston integration",
            "Context support",
            "Execution timing",
            "File transport"
          ],
          "usage": "this.logger.setContext('UserService');\nthis.logger.log('User created');",
          "output": "src/providers/logger.service.ts",
          "dependencies": ["winston"],
          "command": "npx hanma add logger-provider --framework nest"
