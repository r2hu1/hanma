          "id": "hono-basic",
          "name": "hono-basic",
          "displayName": "Node.js Server",
          "description": "Production-ready Hono server for Node.js with @hono/node-server",
          "purpose": "Deploy Hono on Node.js with security headers, structured logging, and graceful shutdown. Best for traditional Node.js hosting.",
          "features": [
            "Security headers via secureHeaders()",
            "Structured JSON logging for observability",
            "Health, ready, and live endpoints for k8s",
            "Graceful shutdown with configurable timeout",
            "CORS with configurable origins",
            "Request timing middleware"
          ],
          "usage": "// Server starts automatically\n// Health check: GET /health\n// Readiness: GET /ready\n// Liveness: GET /live",
          "output": "src/index.ts",
          "dependencies": ["hono", "@hono/node-server"],
          "devDependencies": ["@types/node"],
          "envVars": [
            { "name": "PORT", "default": "3000", "description": "Server port" },
            { "name": "NODE_ENV", "default": "development", "description": "Environment mode" },
            { "name": "CORS_ORIGINS", "description": "Comma-separated allowed origins" },
            { "name": "SHUTDOWN_TIMEOUT", "default": "10000", "description": "Graceful shutdown timeout (ms)" }
          ],
          "command": "npx hanma add hono-basic --framework hono"
        },
