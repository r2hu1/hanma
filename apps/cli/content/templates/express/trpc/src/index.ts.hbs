import { startTRPCServer, shutdownTRPCServer } from "@/libs/trpc-server";

startTRPCServer();

process.on("SIGTERM", () => shutdownTRPCServer("SIGTERM"));
process.on("SIGINT", () => shutdownTRPCServer("SIGINT"));

process.on("unhandledRejection", (reason, p) => {
  console.error("Unhandled Rejection at:", p, "reason:", reason);
});

process.on("uncaughtException", (err) => {
  console.error("Uncaught Exception:", err);
  process.exit(1);
});
