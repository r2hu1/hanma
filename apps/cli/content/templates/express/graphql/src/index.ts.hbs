import { startGraphQLServer, shutdownGraphQLServer } from "@/libs/graphql-server";

startGraphQLServer();

process.on("SIGTERM", () => shutdownGraphQLServer("SIGTERM"));
process.on("SIGINT", () => shutdownGraphQLServer("SIGINT"));

process.on("unhandledRejection", (reason, p) => {
  console.error("Unhandled Rejection at:", p, "reason:", reason);
});

process.on("uncaughtException", (err) => {
  console.error("Uncaught Exception:", err);
  process.exit(1);
});
