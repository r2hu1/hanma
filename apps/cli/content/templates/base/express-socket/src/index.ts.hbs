import { startSocketServer, shutdownSocketServer } from "@/libs/socket-server";

startSocketServer();

process.on("SIGTERM", () => shutdownSocketServer("SIGTERM"));
process.on("SIGINT", () => shutdownSocketServer("SIGINT"));

process.on("unhandledRejection", (reason, p) => {
  console.error("Unhandled Rejection at:", p, "reason:", reason);
});

process.on("uncaughtException", (err) => {
  console.error("Uncaught Exception:", err);
  process.exit(1);
});
