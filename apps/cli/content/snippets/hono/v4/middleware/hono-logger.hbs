import { logger } from "hono/logger";
import { createMiddleware } from "hono/factory";

/**
 * Custom logger that includes request details and timing
 */
export const customLogger = createMiddleware(async (c, next) => {
  const start = Date.now();
  const method = c.req.method;
  const path = c.req.path;
  
  await next();
  
  const ms = Date.now() - start;
  const status = c.res.status;
  
  const logMessage = `[HONO] ${method} ${path} - ${status} (${ms}ms)`;
  
  if (status >= 500) {
    console.error(`\x1b[31m${logMessage}\x1b[0m`);
  } else if (status >= 400) {
    console.warn(`\x1b[33m${logMessage}\x1b[0m`);
  } else {
    console.log(`\x1b[32m${logMessage}\x1b[0m`);
  }
});

/**
 * Standard Hono logger integration
 */
export const setupLogger = (app: any) => {
  app.use("*", logger());
  app.use("*", customLogger);
};
